
* {
	border: none;
	margin-right: 3px;
	border-radius: 10;
        font-family: "Comic Sans MS" ;
	font-size: 18px;
	min-height: 10px;
}

window#waybar {
	background: transparent;
}
#network, #custom-keybinds, #cava, #battery, #backlight, #language, #pulseaudio, 
#clock, #disk, #privacy, #idle_inhibitor, #memory, #cpu, #custom-launcher, 
#network.disconnected, #custom-power, #workspaces, #tray, #tray menu {
    margin-top: 10px;
    margin-left: 8px;
    padding-left: 10px;
    padding-right: 10px;
    margin-bottom: 0px;
    border-radius: 10px;
    transition: none;
    background: #24273a;  /* Темно-фиолетовый */
    color: #8caaee;  /* Голубовато-синий */
    border-bottom: 3px;
    border-style: solid;
    border-color: #8caaee;
    transition: 0.3s;
}
#network:hover, #custom-keybinds:hover, #cava:hover, #battery:hover, #backlight:hover, 
#language:hover, #pulseaudio:hover, #clock:hover, #disk:hover, #privacy:hover, 
#memory:hover, #cpu:hover, #custom-launcher:hover, #network.disconnected:hover, 
#custom-power:hover {
    color: #24273a;
    background: #8caaee;
}
#pulseaudio.muted {
    color: #8caaee;
    background: #24273a; 
    border-bottom: 3px;
    border-style: solid;
    border-color: #8caaee;
    transition: 0.3s;
}
#pulseaudio.muted:hover {
    background: #8caaee;
    color: #24273a; 
}
#idle_inhibitor.activated {
    color: #b7bdf8;
    border-color: #b7bdf8;
}
#idle_inhibitor.activated:hover {
    background: #b7bdf8;
    color: #24273a;
    border-color: #b7bdf8;
}
#idle_inhibitor.deactivated {
    color: #8caaee;
}
#idle_inhibitor.deactivated:hover {
    color: #24273a; 
    background: #8caaee;
}
#workspaces {
    margin-top: 10px;
    margin-left: 8px;
    padding-right: 4px;
    background: #24273a; 
    border-bottom: 3px;
    border-style: solid;
    border-color: #8caaee;
    color: #8caaee;
    transition: 0.3s;
}
#workspaces button {
    color: #8caaee;
    transition: 0.3s;
}
#workspaces button:hover {
    background: transparent;
    color: transparent;
}

